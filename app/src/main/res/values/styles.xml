<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TextStyle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.TextStyle.NavHeader">
        <item name="android:textColor">@color/colorNavHeaderText</item>
        <item name="android:shadowColor">@color/colorNavHeaderTextShadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="AppTheme.TextStyle.Playlist">
        <item name="android:textSize">@dimen/text_size_playlist_item</item>
        <item name="android:textColor">@color/colorPlaylistItemText</item>
    </style>

    <style name="AppTheme.TextStyle.Playlist.Description">
        <item name="android:maxLines">3</item>
    </style>

</resources>
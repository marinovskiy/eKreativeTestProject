<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:dither="true"
            android:shape="oval">
            <size
                android:width="@dimen/avatar_size"
                android:height="@dimen/avatar_size" />
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/inset_avatar_placeholder"
        android:drawable="@drawable/ic_person"
        android:left="@dimen/inset_avatar_placeholder"
        android:right="@dimen/inset_avatar_placeholder"
        android:top="@dimen/inset_avatar_placeholder" />
</layer-list>